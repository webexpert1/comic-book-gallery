@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@ViewBag.SeriesTitle</h1>
        <h2>Issue #@ViewBag.IssueNumber</h2>
        <h5>@Html.Raw(ViewBag.Description)</h5>
        @if (@ViewBag.Artists.Length > 0)
    {
        <div>
            Artists:
            <ul>

                @foreach (string artist in @ViewBag.Artists)
            {
                <li>@artist</li>
        }
            </ul>
        </div>
}

    </div>
</body>
</html>
